generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String  @unique
  description String
  genre       String
  imageUrl    String?
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}
